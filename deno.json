{
  "tasks": {
    "start": "deno run -A --unstable-hmr=main.ts main.ts & deno task tailwindcss",
    "tailwindcss": "npx tailwindcss -i ./styles/main.css -o ./static/main.gen.css --minify --watch"
  },
  "imports": {
    "hono": "jsr:@hono/hono@^4.4.12",
    "tailwindcss": "npm:tailwindcss@^3.4.4"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "exclude": ["./static/*"]
}
